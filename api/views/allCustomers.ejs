<html>
  <head>
    <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Customers</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
    <link rel="stylesheet" href="../public/css/style.css">
  </head>
  
  <body >  
    <h1 ><span class="yellow">Customers List</span></h1>

    <form id="newcustomer" method ="GET"action="/customers/newcustomer"enctype="multipart/form-data">
      <center><p><button type="submit" class="button">--- NEW PERSON ---</button></p></center>
    </form>

    <table class="container">
      <thead>
        <tr role="row">
          <th role="columnheader">Customer ID</th> 
          <th role="columnheader">Name</th> 
          <th role="columnheader">Address</th> 
          <th role="columnheader">Order Delivered?</th>
          <th role="columnheader">Total Amount</th> 
          <th role="columnheader">Amount Paid</th> 
          <th role="columnheader">Balance Amount</th> 
          <th role="columnheader">Delete</th> 
        </tr>
      </thead>
      
      <tbody role="rowgroup">
        <% var count=0;
          data.forEach(function(dataitem){ 
          count += 1;
    
          if(count%2){ %>
            <tr role="row" class="wrapper animated bounceInLeft">
          <% } else { %>
            <tr role="row" class="wrapper animated bounceInRight">
          <% } %>
              <td role="cell"><%= count %></td>
              <td role="cell"><a method="GET"href="/customers/<%= dataitem[0] %>"><%= dataitem[1] %></a></td>
              <td role="cell"><%= dataitem[2] %></td>
              <td role="cell"><%= dataitem[3] %></td>
              <td role="cell"><%= dataitem[4] %></td>
              <td role="cell"><%= dataitem[5] %></td>
              <td role="cell"><%= dataitem[4] - dataitem[5] %></td>
              <td>
                <form id="deleteCustomer" method ="POST"action="/customers/delete/<%= dataitem[0] %>">
                  <center><p><button type="submit">DELETE</button></p></center>
                </form>
              </td>
            </tr>
          
        <% }); %>
      </tbody>
    </table>
    
    <form id="cancel" method="GET"action='/customers/details'>
      <center><p><button type="submit" class="button">Get All Details</button></p></center>
    </form>
  </body>
</html>