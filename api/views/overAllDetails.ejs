<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Stats</title>
		<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
		<link rel="stylesheet" href="../public/css/style.css">
	</head>

	<body>
        <h1>OverAll<span class="yellow">Statistics</span></h1>
		<center>
			<table class="container  wrapper animated bounceInLeft">
				<thead>
					<tr rolw="row">
							<th role="columnheader">Total Amount</th> 
							<th role="columnheader">Amount Paid</th> 
							<th role="columnheader">Amount Balance</th> 
					</tr>
				</thead>
				<tbody role="rowgroup">
					<tr role="row">	
						<td role="cell"><%= data.TotalAmount%></td>
						<td role="cell"><%= data.AmountPaid%></td>
						<td role="cell"><%= data.TotalAmount - data.AmountPaid%></td>
					</tr>
				</tbody>
			</table>
		
			<table class="container  wrapper animated bounceInRight">
				<% sales = Object.keys(data.ProductSales)
				sales.forEach(function(dataitem){ %>
					<tbody role="rowgroup">
						<tr role="row">	
							<th role="columnheader"><%= dataitem %></th> 
							<td role="cell"><%= data.ProductSales[dataitem] %> KG</td>
						</tr>
					</tbody>
				<% }); %>
			</table>
			
			<form id="cancel" method="GET"action='/customers'>
				<p><button type="submit" class="button cancel">Cancel</button></p>
			</form>
		</center>
	</body>
</html>
